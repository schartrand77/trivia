# Trivia Application Environment Configuration
# Copy this file to .env and modify values as needed

# Container Configuration
CONTAINER_NAME=trivia
CONTAINER_HOSTNAME=trivia
IMAGE_NAME=trivia
IMAGE_TAG=latest

# Port Configuration
# HOST:CONTAINER - Change PORT_HOST to expose on a different port
PORT_HOST=8080
PORT_CONTAINER=80

# Timezone (see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=Etc/UTC

# Data Volume - Path where persistent player records are stored
DATA_VOLUME=./data

# Restart Policy (no, always, unless-stopped, on-failure)
RESTART_POLICY=unless-stopped

# Health Check Configuration (in seconds)
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=10

# Network Configuration
NETWORK_NAME=trivia-net
NETWORK_DRIVER=bridge

# Application Settings (optional - for future use)
LOG_LEVEL=info
DEBUG=false
